
@{
    Layout = null;
    ViewBag.Title = "Update";
}

<div class=" tab-pane active">
    <form id="formUpdate" role="form" class="form-horizontal" style="height:100%" ng-submit="update($event)" novalidate >
        <div class="modal-body">
            @*<div class="row">
                <div class="col-sm-11">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Reference:</label>
                        <div class="col-md-7">
